@require '../../common/styles/global-variables.styl'

.submit-notice
  display: none
  position: fixed
  width: 300px
  top: 150px
  left: calc(50% - 150px)
  padding: $default-padding * 2
  background-color: $thunderbird
  border-radius: 3px
  text-align: center
  font-size: 18px
  font-weight: $font-weight--bold
  color: $pure-white

  &--show
    display: block
    animation: hideNotice 1s forwards
    animation-delay: 2s

@keyframes hideNotice
  0%
    opacity: 1
    z-index: 4
  50%
    opacity: 0
    z-index: 4
  100%
    opacity: 0
    z-index: -3
