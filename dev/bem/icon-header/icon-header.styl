@require '../../common/styles/global-variables.styl'

.icon-header
  display: flex
  align-items: center
  color: $pomegranate
  @media (max-width: $small)
    justify-content: center

  &--font-color
    &--black
      color: $main-shaft
    &--white
      color: $pure-white

  &__icon
    margin-right: $default-padding * 1.5

  &__text
    text-transform: uppercase
    font-size: 20px
    font-weight: $font-weight--black
    line-height: 24px


